{% extends 'AdministrationBundle::layout.html.twig' %}

{% block mainarea -%}

<h1>Administrator</h1>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ entity.id }}</td>
			</tr>
			<tr>
				<th>Username</th>
				<td>{{ entity.username }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ entity.email }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ entity.password }}</td>
			</tr>
		</tbody>
	</table>
</div>

<a class="btn btn-default" href="{{ path('administrator') }}">
	Back to the list
</a>
<a class="btn btn-default" href="{{ path('administrator_edit', { 'id': entity.id }) }}">
	Edit
</a>
{{ form(delete_form) }}

{% endblock %}
