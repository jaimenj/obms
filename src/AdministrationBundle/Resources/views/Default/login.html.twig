{% extends 'AdministrationBundle::layout.html.twig' %}

{% block mainarea %}

    <div class="panel panel-default">
        <div class="panel-body text-centered">
            <h2>Access control</h2>

			<p>Access for administrator: <b>administrator</b>, password <b>thepass</b>.</p>

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form name="form" method="post" action="/app_dev.php/administration/login_check" class="form-horizontal">
            <fieldset>
            	<div  class="form-group">
            		<label for="form__username" class=" control-label col-lg-3 control-label required">Username</label>
            		<div class="col-lg-9">
            			<input type="text" id="username" name="_username" class="form-control" value="{{ not last_username ? 'administrator' }}" />
            		</div>
            	</div>
            	<div  class="form-group">
            		<label for="form__password" class=" control-label col-lg-3 control-label required">Password</label>
            		<div class="col-lg-9">
                        <input type="password" id="password" name="_password" class="form-control" value="thepass" />
            		</div>
            	</div>
            	<div>
            		<button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">Login</button>
            	</div>
                <input type="hidden" name="_csrf_token"
					value="{{ csrf_token('authenticate') }}">
            </fieldset>
            </form>

        </div>
    </div>

{% endblock %}
