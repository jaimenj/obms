{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea -%}

<h1>My profile</h1>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ entity.id }}</td>
			</tr>
			<tr>
				<th>Username</th>
				<td>{{ entity.username }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ entity.email }}</td>
			</tr>
			<tr>
				<th>Current business working with</th>
				<td>{{ entity.currentBusiness }}</td>
			</tr>
		</tbody>
	</table>
</div>

<a class="btn btn-default" href="{{ path('app_my_profile_edit') }}">
	<i class="fa fa-edit"></i>
	Edit
</a>

{% endblock %}
