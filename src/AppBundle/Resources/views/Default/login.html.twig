{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea %}

<div style="text-align: center;">
	<a href="{{ path('front_home') }}">
		<img src="{{ asset('apple-touch-icon.png') }}">
	</a>
	<h1>Online Business Management System</h1>
</div>

<div class="panel panel-default">
	<div class="panel-body text-centered">
		<h2>Access control</h2>

		<p>Access for administrator:
			<b>user1</b>, password
			<b>thepass</b>.</p>

		{% if error %}
		<div style="font-size: 150%; color: red;">{{ error.message }}</div>
		{% endif %}

		<form action="{{ path('app_login_check') }}" class="form-horizontal" method="post" name="form">
			<fieldset>
				<div class="form-group">
					<label class=" control-label col-lg-3 control-label required" for="form__username">Username</label>
					<div class="col-lg-9">
						<input class="form-control" id="username" name="_username" required="required" type="text" value="{{ not last_username ? 'user1' }}"/>
					</div>
				</div>
				<div class="form-group">
					<label class=" control-label col-lg-3 control-label required" for="form__password">Password</label>
					<div class="col-lg-9">
						<input class="form-control" id="password" name="_password" required="required" type="password" value="thepass"/>
					</div>
				</div>
				<div>
					<button class="btn btn-default" id="login_submit" name="login_submit" type="submit">Login</button>
				</div>
				<input name="_csrf_token" type="hidden" value="{{ csrf_token('authenticate') }}">
			</fieldset>
		</form>

	</div>
</div>

{% endblock %}
