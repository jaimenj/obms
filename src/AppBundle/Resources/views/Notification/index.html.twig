{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea -%}
    <h1>Notification list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('notification_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                
                    
                        <a href="{{ path('notification_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>
                    
                    
                        <a href="{{ path('notification_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>
                    
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        
        
            <a href="{{ path('notification_new') }}">
                Create a new entry
            </a>
        
    
    {% endblock %}
