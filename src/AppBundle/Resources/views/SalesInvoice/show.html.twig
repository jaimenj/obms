{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea -%}
<h1>Sales invoice</h1>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ entity.id }}</td>
			</tr>
			<tr>
				<th>Reference</th>
				<td>{{ entity.reference }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
			</tr>
		</tbody>
	</table>
</div>

<a class="btn btn-default" href="{{ path('salesinvoice') }}">
	Back to the list
</a>

<a class="btn btn-default" href="{{ path('salesinvoice_edit', { 'id': entity.id }) }}">
	Edit
</a>

{{ form(delete_form) }}

{% endblock %}
