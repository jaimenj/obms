{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea -%}

<h1>Worker payroll</h1>

<table class="record_properties">
	<tbody>
		<tr>
			<th>Id</th>
			<td>{{ entity.id }}</td>
		</tr>
		<tr>
			<th>Year</th>
			<td>{{ entity.year }}</td>
		</tr>
		<tr>
			<th>Month</th>
			<td>{{ entity.month }}</td>
		</tr>
		<tr>
			<th>Amount</th>
			<td>{{ entity.amount }}</td>
		</tr>
	</tbody>
</table>

<a class="btn btn-default" href="{{ path('workerpayroll') }}">
	Back to the list
</a>
<a class="btn btn-default" href="{{ path('workerpayroll_edit', { 'id': entity.id }) }}">
	Edit
</a>
{{ form(delete_form) }}

{% endblock %}
