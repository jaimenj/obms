{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea -%}

<h1>Workers payrolls list</h1>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Year</th>
				<th>Month</th>
				<th>Amount</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for entity in entities %}
			<tr>
				<td>
					<a href="{{ path('workerpayroll_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
				</td>
				<td>{{ entity.year }}</td>
				<td>{{ entity.month }}</td>
				<td>{{ entity.amount }}</td>
				<td>
					<a class="btn btn-default" href="{{ path('workerpayroll_show', { 'id': entity.id }) }}">
						<i class="fa fa-eye"></i>
					</a>
					<a class="btn btn-default" href="{{ path('workerpayroll_edit', { 'id': entity.id }) }}">
						<i class="fa fa-edit"></i>
					</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

{% endblock %}
