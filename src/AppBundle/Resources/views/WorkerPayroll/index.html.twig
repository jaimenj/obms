{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea -%}

{{ form_start(formListWorkerPayrolls) }}

<div class="row">
	<div class="col-md-3">
		<h1>Workers payrolls list</h1>
	</div>
	<div class="col-md-4">
		<button class="btn btn-default" type="submit">
			<i class="fa fa-floppy-o"></i>
			Save all
		</button>
		<a class="btn btn-default" href="{{ path('workerpayroll_new') }}">
			<i class="fa fa-plus"></i>
			Create new
		</a>
	</div>
	<div class="col-md-5">
		{{ knp_pagination_render(paginator) }}
	</div>
</div>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Year</th>
				<th>Month</th>
				<th>Amount</th>
				<th>Worker</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for entity in paginator %}
			<tr>
				<td>
					<a href="{{ path('workerpayroll_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
				</td>
				<td>{{ form_widget(formListWorkerPayrolls[entity.id ~ 'year'], {value: entity.year}) }}</td>
				<td>{{ form_widget(formListWorkerPayrolls[entity.id ~ 'month'], {value: entity.month}) }}</td>
				<td>{{ form_widget(formListWorkerPayrolls[entity.id ~ 'amount'], {value: entity.amount}) }}</td>
				<td>{{ form_widget(formListWorkerPayrolls[entity.id ~ 'worker']) }}</td>
				<td>
					<a class="btn btn-default" href="{{ path('workerpayroll_show', { 'id': entity.id }) }}">
						<i class="fa fa-eye"></i>
					</a>
					<a class="btn btn-default" href="{{ path('workerpayroll_edit', { 'id': entity.id }) }}">
						<i class="fa fa-edit"></i>
					</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

{{ form_end(formListWorkerPayrolls) }}

{% endblock %}
