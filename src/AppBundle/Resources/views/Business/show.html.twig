{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea -%}

<h1>Business</h1>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ entity.id }}</td>
			</tr>
			<tr>
				<th>Fullname</th>
				<td>{{ entity.fullname }}</td>
			</tr>
			<tr>
				<th>Cifnif</th>
				<td>{{ entity.cifnif }}</td>
			</tr>
			<tr>
				<th>Address</th>
				<td>{{ entity.address }}</td>
			</tr>
			<tr>
				<th>More</th>
				<td>{{ entity.users.count }} users assigned</td>
			</tr>
		</tbody>
	</table>
</div>

<a class="btn btn-default" href="{{ path('business') }}">
	Back to the list
</a>
<a class="btn btn-default" href="{{ path('business_edit', { 'id': entity.id }) }}">
	Edit
</a>

{{ form(delete_form) }}

{% endblock %}
