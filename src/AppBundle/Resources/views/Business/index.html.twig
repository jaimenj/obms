{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea -%}

{{ form_start(formListBusinesses) }}

<div class="row">
	<div class="col-md-3">
		<h1>Businesses</h1>
	</div>
	<div class="col-md-4">
		<button class="btn btn-default" type="submit">
			<i class="fa fa-floppy-o"></i>
			Save all
		</button>
		<a class="btn btn-default" href="{{ path('business_new') }}">
			<i class="fa fa-plus"></i>
			Create new
		</a>
	</div>
	<div class="col-md-5">
		{{ knp_pagination_render(paginator) }}
	</div>
</div>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Full name</th>
				<th>CIFNIF</th>
				<th>Address</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for entity in paginator %}
			<tr>
				<td>
					<a href="{{ path('business_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
				</td>
				<td>{{ entity.fullname }} ({{ entity.users.count }} users asigned)</td>
				<td>{{ entity.cifnif }}</td>
				<td>{{ entity.address }}</td>
				<td>
					<a class="btn btn-default" href="{{ path('business_show', { 'id': entity.id }) }}">
						<i class="fa fa-eye"></i>
					</a>
					<a class="btn btn-default" href="{{ path('business_edit', { 'id': entity.id }) }}">
						<i class="fa fa-edit"></i>
					</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

{{ form_start(formListBusinesses) }}

{% endblock %}
