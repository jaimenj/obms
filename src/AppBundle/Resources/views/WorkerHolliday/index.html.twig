{% extends 'AppBundle::layout.html.twig' %}

{% block mainarea -%}

<h1>Workers hollidays list</h1>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Init date</th>
				<th>Finish date</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for entity in entities %}
			<tr>
				<td>
					<a href="{{ path('workerholliday_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
				</td>
				<td>{% if entity.initdate %}{{ entity.initdate|date('Y-m-d') }}{% endif %}</td>
				<td>{% if entity.finishdate %}{{ entity.finishdate|date('Y-m-d') }}{% endif %}</td>
				<td>
					<a class="btn btn-default" href="{{ path('workerholliday_show', { 'id': entity.id }) }}">
						<i class="fa fa-eye"></i>
					</a>
					<a class="btn btn-default" href="{{ path('workerholliday_edit', { 'id': entity.id }) }}">
						<i class="fa fa-edit"></i>
					</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

{% endblock %}
